{
  "name": "MagazineModule",
  "moduleName": "MagazineModule",
  "modelName": "Magazine",
  "collectionName": "Magazines",
  "url": "/magazines/",
  "urlRoot": "magazines",
  "dbTable": "magazines",
  "navigation": true,

  "settings": {
    "categories" : {
      "value": "Webdevelopment, Interactive, Webdesign",
      "type": "text"
    },
    "layouts" : {
      "description": "Comma seperated list of layout keys",
      "value": "default, fullsize",
      "type": "text"
    },
    "theme" : {
      "description": "Comma seperated list of theme keys",
      "value": "default",
      "type": "text"
    },
    "print" : {
      "value": false,
      "type": "checkbox"
    }
  },
  "model": {
    "title" : {
      "type": "text",
      "mongooseType": "String"
    },
    "name" : {
      "type": "hidden",
      "mongooseType": "String"
    },
    "author" : {
      "type": "text",
      "mongooseType": "String"
    },
    "info" : {
      "type": "text",
      "mongooseType": "String"
    },
    "product_id" : {
      "type": "text",
      "mongooseType": "String"
    },
    "theme": {
      "type": "text",
      "mongooseType": "String"
    },
    "files": {
      "type": "hidden",
      "mongooseType": "Object"
    },
    "editorial" : {
      "type": "wysiwyg",
      "mongooseType": "String"
    },
    "impressum" : {
      "type": "wysiwyg",
      "mongooseType": "String"
    },
    "orientation": {
      "type": "select",
      "mongooseType": "String",
      "condition": "isPrint",
      "options": {
        "landscape": "Landscape",
        "portrait": "Portrait"
      }
    },
    "papersize" : {
      "type": "select",
      "mongooseType": "String",
      "condition": "isPrint",
      "options": {
        "A4": "A4",
        "A5": "A5",
        "A6": "A6"
      }
    },
    "layout" : {
      "type": "text",
      "mongooseType": "String"
    }
  }
}
